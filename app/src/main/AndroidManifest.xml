<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gebeya_mood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gebeya_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/gebeya_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.TeamDetailActivity"></activity>
        <activity android:name=".views.MoodSubmitActivity" />
        <activity
            android:name=".views.MyMoodsActivity"
            android:label="@string/title_activity_my_moods" />
        <activity
            android:name=".views.MoodsHomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".views.AdminActivity"
            android:label="@string/admin_title" />
        <activity android:name=".views.LoginActivity" />
        <activity
            android:name=".views.MoodPromptActivity"
            android:label="@string/title_activity_mood_prompt" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.SignUpActivity"
            android:label="@string/action_sing_up_short" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
    </application>

</manifest>