<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gebeya_mood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/gebeya_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/gebeya_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Auths.register.OAuthActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AppIntroduction.GebeyaIntro"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TeamMood.TeamDetailActivity" />
        <activity android:name=".UserMood.MoodSubmitActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserMood.UserMoodsActivity"
            android:label="@string/title_activity_my_moods" />
        <activity
            android:name=".TeamMood.GebeyaAllTeamMoodsActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".Admin.AdminActivity"
            android:label="@string/admin_title" />
        <activity android:name=".Auths.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserMood.MoodPromptActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Auths.register.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>