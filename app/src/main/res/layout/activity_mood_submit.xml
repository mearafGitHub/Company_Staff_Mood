<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moods.MoodSubmit"
    android:padding="18dp"
    android:orientation="vertical"
    android:id="@+id/modalLayout"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is it?"
            android:textColor="@color/colorPrimaryFront"
            android:textSize="21dp"
            android:layout_marginRight="100dp"/>


        <ImageButton
            android:id="@+id/cancelModalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="60dp"
            android:foregroundGravity="top|left"
            android:background="#00000000"
            android:gravity="top|right"

            android:src="@drawable/ic_highlight_off"
            />
    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/emojiAnimation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"

        app:lottie_loop="true"
        app:lottie_rawRes="@raw/haha" />



   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="18dp">

       <com.airbnb.lottie.LottieAnimationView
           android:layout_margin="8dp"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:scaleType="centerCrop"
           app:lottie_autoPlay="true"
           app:lottie_loop="true"
           app:lottie_rawRes="@raw/haha" />

       <com.airbnb.lottie.LottieAnimationView
           android:layout_margin="8dp"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:scaleType="centerCrop"
           app:lottie_autoPlay="true"
           app:lottie_loop="true"
           app:lottie_rawRes="@raw/sad" />

       <com.airbnb.lottie.LottieAnimationView
           android:layout_margin="8dp"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:scaleType="centerCrop"
           app:lottie_autoPlay="true"
           app:lottie_loop="true"
           app:lottie_rawRes="@raw/wow" />

       <com.airbnb.lottie.LottieAnimationView
           android:layout_margin="8dp"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:scaleType="centerCrop"
           app:lottie_autoPlay="true"
           app:lottie_loop="true"
           app:lottie_rawRes="@raw/angry" />


       <com.airbnb.lottie.LottieAnimationView
           android:layout_margin="8dp"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:scaleType="centerCrop"
           app:lottie_autoPlay="true"
           app:lottie_loop="true"
           app:lottie_rawRes="@raw/meh" />


       <com.airbnb.lottie.LottieAnimationView
           android:layout_margin="8dp"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:scaleType="centerCrop"
           app:lottie_autoPlay="true"
           app:lottie_loop="true"
           app:lottie_rawRes="@raw/haha" />
   </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="true"
        android:layout_marginTop="9dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/goModalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:text="Go"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:elevation="9dp"
            />

        <Button
            android:id="@+id/skipModalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:text="Skip"
            android:elevation="9dp"
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />

    </LinearLayout>


</LinearLayout>