<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    tools:context=".views.MoodPromptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/chat_anim"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/chad_the_chatbot"
            tools:layout_editor_absoluteX="91dp" />

        <TextView
            android:id="@+id/promptTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:paddingHorizontal="15sp"
            android:elevation="18dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:shadowColor="@color/colorPrimaryFront"
            android:textColor="@color/colorPrimary"
            android:text="Hey!"
            />

        <TextView
            android:id="@+id/promptSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:elevation="18dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:shadowColor="@color/colorPrimaryFront"
            android:textColor="@color/colorPrimary"
            android:text="How are you feeling today?"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="70dp"
            android:elevation="18dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/happy"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/haha" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/sad"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/sad" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/content"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/wow" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/angry"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/angry" />


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/neutral"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/meh" />


        </LinearLayout>




        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="196dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:background="@color/colorPrimaryFront"
            app:menu="@menu/bottom_nav"
            android:layout_gravity="bottom"
            android:id="@+id/bottom_nav"
            android:backgroundTint="@color/colorPrimaryFront"
            android:elevation="21dp"
            >


        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>